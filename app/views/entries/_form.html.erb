<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :place_id, style: "display: block" %>
    <%= form.collection_select :place_id, Place.order(:title), :id, :title, class: "form-select" %> 
  </div>

  <div class="mb-3">
    <%= form.label :topic_id, style: "display: block" %>
    <%= form.collection_select :topic_id, Topic.order(:title), :id, :title, class: "form-select" %> 
  </div>

  <div class="mb-3">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.label "Details", style: "display: block" %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  

  

  <div>
    <%= form.submit class: "btn btn-primary"%>
  </div>
<% end %>
